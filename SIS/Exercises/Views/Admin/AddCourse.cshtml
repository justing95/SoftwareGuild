@model Exercises.Models.Data.Course

@{
    ViewBag.Title = "AddCourse";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Add Course</h3>
        @Html.ActionLink("Return to List", "Courses", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            <div class="form-group">
                <label>Course</label>
                @Html.TextBoxFor(c => c.CourseName, new { @class = "form-control", placeholder = "Course" })
            </div>
            <div class="form-group">
                <label>Course ID</label>
                @Html.TextBoxFor(c => c.CourseId, new { @class = "form-control", placeholder = "Course ID" })
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>
