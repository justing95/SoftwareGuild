@model List<HRPortal.Models.Category>

@{
    ViewBag.Title = "ManageCategories";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Categories</h3>
        @Html.ActionLink("Add Category", "AddCategory", "Category", null, new { @class = "btn btn-primary" })
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped" style="width: auto;">
            <thead>
                <tr>
                    <th>Category</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.CategoryName</td>
                        <td>
                            @Html.ActionLink("Delete", "DeleteCategory", "Category", new { categoryName = category.CategoryName }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

